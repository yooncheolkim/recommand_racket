<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="kr.ac.koreatech.yoonchul.recommand_racket.MainActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="성별"
        android:textSize="30dp"
        android:id="@+id/gender_button" />
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:id="@+id/gender">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/radio_male"
            android:text="남성"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/radio_female"
            android:text="여성"/>
    </RadioGroup>
</LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="1">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text = "몸무게"
        android:textSize="30dp"
        android:id = "@+id/weight_button"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/weight"
        android:textSize="30dp"
        android:inputType="number"
        android:digits="0123456789"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="kg"
        android:textSize="30dp"

        android:id="@+id/textView"
        android:layout_gravity="right"/>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text = "키"
            android:textSize="30dp"
            android:id = "@+id/height_button"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/height"
            android:inputType="number"
            android:digits="0123456789"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="cm"
            android:textSize="30dp"
            android:layout_gravity="right"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:text = "플레이스타일"
            android:textSize="18dp"
            android:id = "@+id/style_button"/>
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:id="@+id/type">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="올라운더"
                android:id = "@+id/allrounder"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="수비형"
                android:id = "@+id/defensive"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="공격형"
                android:id="@+id/offensive"/>
        </RadioGroup>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text = "가격"
            android:textSize="30dp"
            android:id = "@+id/price_button"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/price"
            android:inputType="number"
            android:digits="0123456789"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="won"
            android:textSize="30dp"
            android:layout_gravity="right"/>
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id = "@+id/next"
        android:text = "next"
        android:textSize="50dp"/>
</LinearLayout>
